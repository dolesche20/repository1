#Aufgabe 1:
print("Hallo Benutzer")
zahl1_string = input("Eingabe der ersten Zahl:")
zahl2_string = input ("Eingabe der zweiten Zahl:")
zahl1 = float(zahl1_string)
zahl2 = float(zahl2_string)

if zahl1 < zahl2:
    a = zahl1
    b = zahl2
elif zahl2 < zahl1:
    a = zahl2
    b = zahl1

print("Summe:", zahl1 + zahl2)
print("Differenz:", a - b)
print("Produkt:", zahl1 * zahl2)
print("Quotient:", a / b)




